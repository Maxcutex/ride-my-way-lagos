<!doctype html>
<html>

<head>
<meta charset="utf-8">
<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Ride My Way Lagos</title>

<link rel="stylesheet" href="/css/custom.css" type="text/css">
<link rel="stylesheet" href="/css/dataTable.css" type="text/css">

<link rel="stylesheet" href="/css/bootstrap.css" type="text/css">

<link rel="stylesheet" href="/css/theme-color.css" type="text/css">

<link rel="stylesheet" href="/css/responsive.css" type="text/css">

<link rel="stylesheet" href="/css/owl.carousel.css" type="text/css">

<link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">

<link rel="stylesheet" href="/css/icomoon.css" type="text/css">

<link href='https://fonts.googleapis.com/css?family=Exo+2:400,300,600,700,900,800,200,100,500,400italic' rel='stylesheet' type='text/css'>
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<script type="text/javascript" src="/js/jquery-1.11.3.min.js"></script>
<script src="/js/jquery.dataTables.min.js"></script>
<script src="/js/dataTables.bootstrap.min.js"></script>
</head>
<body>

<div id="wrapper">

<header class="cp_header" id="cp-inner-header">
<div id="cp-slide-menu" class="cp_side-navigation">
<ul class="navbar-nav">
<li id="close"><a href="#"><i class="fa fa-close"></i></a></li>
<li> <%= link_to "Home", root_path %></li>
<li>
<%= link_to "FAQ", home_faqs_path %>
</li>
<li>
<%= link_to "Login", new_user_session_path %>
</li>
<li>
<%= link_to "Register", new_user_registration_path %>
</li>
<% if user_signed_in? %>

<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Rides <i class="fa fa-angle-down"></i></a>
<ul class="dropdown-menu" role="menu">
<li><%= link_to "View My Rides", root_path %></li>
<li><%= link_to "Create Ride", new_ride_path %></li>
</ul>
</li>

<% end %>

</ul>
</div>
<div id="cp-slide-search" class="cp_side-search">
<%= form_for :rides, url: "/rides/search",  :remote => true, :authenticity_token => true, :html => {  :id => 'form_search' } do |s| %>
<input type="text" placeholder="Enter Your Name..." required name="search_value">
<button type="submit"><i class="fa fa-search"></i></button>
<% end %>
</div>

<div class="cp-navigation-row">
<div class="container">
<div class="row">
<div class="col-md-12">

<div class="cp-topbar">
<ul class="top-listed">
<% if user_signed_in? %>
<li> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
<li> <%= link_to "My Profile", auth_profile_path %></li>

<% else %>
<li> <%= link_to "Log In", new_user_registration_path %></li>
<li> <%= link_to "Register", new_user_session_path %></li>

<% end %>


</ul>
<span class="tp-num">Call Us. +00 123 456 789</span>
</div>
</div>
</div>
<div class="row">
<div class="col-md-3 col-sm-12 col-xs-6">

 <strong class="cp-logo">
<a href="/"><img src="/images/cp-logo.png" alt=""></a>
</strong>
</div>
<div class="col-md-9 col-sm-12 col-xs-6">

<div class="cp-nav-holder">
<ul class="navbar-nav">
<li> <%= link_to "Home", root_path %></li>
<li> <%= link_to "FAQs", home_faqs_path %></li>
<% if user_signed_in? %>
<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Rides <i class="fa fa-angle-down"></i></a>
<ul class="dropdown-menu" role="menu">
<li><%= link_to "View My Rides", root_path %></li>
<li><%= link_to "Create Ride", new_ride_path %></li>
</ul>
</li>
<% end %>
<li> <%= link_to "Contact", home_contact_path %></li>
<li>
</ul>
<ul class="nav-right-listed">
<li id="search-push"><i class="fa fa-search"></i></li>
<li id="push" class="cp-sidemenu"><a href="#"><i class="fa fa-align-justify"></i></a></li>
</ul>
</div>
</div>
</div>
</div>
</div>
</header>

<div class="cp_inner-banner">
<img src="/images/banner/inner-banner-img-03.jpg" alt="">

<div class="cp-inner-banner-holder">
<div class="container">
<h2><%=@pgheader ? @pgheader : 'Welcome to Login'%></h2>

<ul class="breadcrumb">
<li><a href="/">Home</a></li>
<li class="active"><%=@breadcrumb ? @breadcrumb : 'Login'%></li>
</ul>
</div>
</div>
<div class="animate-bus">
<img src="/images/animate-bus2.png" alt="">
</div>
</div>

<%=yield%>

<footer class="cp_footer">


<section class="cp-ft-bottom-section">
<div class="container">
<div class="row">
<div class="col-md-5 col-sm-12">

<div class="cp-ft-form-box">


</div>
</div>
 <div class="col-md-7 col-sm-12">

<nav class="cp-footer-nav">
<ul>
<li><a href="/">Home</a></li>
<li><a href="#">FAQs</a></li>
<li><a href="#">Contact Us</a></li>
</ul>
</nav>
<p> All Rights Reserved 2018 </p>
</div>
</div>
</div>
</section>
</footer>
</div>


<script type="text/javascript" src="/js/bootstrap.min.js"></script>

<script src="/js/html5shiv.js" type="text/javascript"></script>

<script type="text/javascript" src="/js/migrate.js"></script>

<script type="text/javascript" src="/js/owl.carousel.min.js"></script>

<script type="text/javascript" src="/js/custom-script.js"></script>
</body>

</html>