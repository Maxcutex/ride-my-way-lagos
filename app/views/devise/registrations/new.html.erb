
<div id="cp-main-content">

<section class="cp-reservation-section pd-tb80">
<div class="container">
<div class="cp-heading-style1">
<h2>Your <span>Registration</span></h2>
</div>

<div class="cp-reservation-box cp-login-box">
<h3>Please enter to Register </h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="inner-holder">
<label>Enter Your First Name</label>
 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "First Name", required: true, pattern: "[a-zA-Z ]+" %>

</div>

<div class="inner-holder">
<label>Enter Your Last Name</label>
 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Last Name", required: true, pattern: "[a-zA-Z ]+" %>

</div>
<div class="inner-holder">
<label>Enter Your Username</label>
 <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", required: true, pattern: "[a-zA-Z ]+" %>

</div>
<div class="inner-holder">
<label>Email Address</label>
 <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>

</div>
<div class="inner-holder">
<label>Password</label>
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder: "Password", class: "form-control"  %> <span class="glyphicon glyphicon-lock form-control-feedback"></span>

</div>

<div class="inner-holder">
<label>Confirm Password</label>
           <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Confirm Password", class: "form-control" %>

</div>
<div class="inner-holder">
<%= f.submit "Sign up", class: "submit" %>
<a href="#" class="lost-pw">Lost Password</a>
</div>
<p>Lost using demo as bth username and password to view the user area.</p>
<% end %>
</div>
</div>
</section>
</div>



