
<div id="cp-main-content">

<section class="cp-reservation-section pd-tb80">
<div class="container">
<div class="cp-heading-style1">
<h2> <span>Login</span></h2>
</div>

<div class="cp-reservation-box cp-login-box">
<h3>Please enter Credentials</h3>
 <p id="notice"><%= notice %></p>
 <%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="inner-holder">
<label>Email Address</label>
 <%= f.text_field :email, autofocus: true, autocomplete: "username", required: true, pattern: "^[a-zA-Z0-9-\_.]+@[a-zA-Z0-9-\_.]+\.[a-zA-Z0-9.]{2,5}$"  %>
</div>
<div class="inner-holder">
<label>Password</label>
 <%= f.password_field :password, autocomplete: "current-password" , placeholder: 'Password', required: true%>
</div>


<div class="inner-holder">
<button type="submit" class="submit">Sign In</button>
</div>
    <%= render "devise/shared/links" %>
        <!-- /.col -->
      </div>
   <% end %>
</div>
</div>
</section>
</div>


 
