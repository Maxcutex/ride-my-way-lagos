<div id="cp-main-content">

<section class="cp-faq-section pd-tb80">
<div class="container">
<div class="row">
<div class="col-md-12">

<div class="cp-faq-holder">
<h3>RIDES</h3>
<p id="notice"><%= notice %></p>

<table class="dataTable" id="RideResult">
  <thead>
    <tr>
    <th>Start Location</th>
    <th>End Location</th>
    <th>Date/Time Movement</th>
    <th>Followers</th>
    <th>Free Space<th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
       <td><%=ride.start_location%></td>
       <td><%=ride.end_location%></td>
       <td><%=ride.date_ride%></td>
       <td><%=ride.rider_count%></td>
       <td><%=%><td>
        <td><%= link_to 'View Details', ride %></td>
        <% if user_signed_in? && ride.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td colspan="2">
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>

</div>
</div>
 </section>
</div>
<script>
$(document).ready(function() {
    $('#RideResult').DataTable();
} );
</script>


